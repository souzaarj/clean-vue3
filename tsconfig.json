{
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "rootDirs": ["src", "__tests__"],
    "strictPropertyInitialization": false,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@/tests/*": ["../__tests__/*"]
    },
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "__tests__/**/*.ts",
    "__tests__/**/*.vue"
  ],
  "exclude": ["node_modules"]
}
